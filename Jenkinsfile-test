pipeline {
    agent any

    parameters {
        booleanParam(name: 'test_bool', defaultValue: true, description: 'test bool')
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
