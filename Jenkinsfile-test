pipeline {
    agent any

    environment {
        cc = 'lang'
    }
    parameters {
        booleanParam(name: 'test_bool', defaultValue: true, description: 'test bool')
    }

    stages {
        stage('Build 构建') {
            steps {
              
                sayHello(name: 'env.cc', msg: 'hello你好')
                echo 'Building..' + params.test_bool
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..' + "$env.cc"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
